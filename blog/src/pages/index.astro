---
import { supabase } from '../lib/supabase';
import type { Digest } from '../lib/types';
import SubscribeForm from '../components/SubscribeForm.astro';

// Get query params
const category = Astro.url.searchParams.get('category');
const search = Astro.url.searchParams.get('search');
const page = parseInt(Astro.url.searchParams.get('page') || '1');
const pageSize = 12;

// Build query
let query = supabase
  .from('digests_with_counts')
  .select('*', { count: 'exact' })
  .eq('status', 'published');

if (category && category !== 'all') {
  query = query.eq('category', category);
}

if (search) {
  query = query.textSearch('search_vector', search);
}

query = query
  .order('published_date', { ascending: false })
  .range((page - 1) * pageSize, page * pageSize - 1);

const { data: digests, count } = await query;
const totalPages = Math.ceil((count || 0) / pageSize);

const CATEGORY_COLORS = {
  ml_monday: 'bg-blue-100 text-blue-800',
  tech_tuesday: 'bg-green-100 text-green-800',
  web_wednesday: 'bg-purple-100 text-purple-800',
  thought_thursday: 'bg-yellow-100 text-yellow-800',
  fun_friday: 'bg-pink-100 text-pink-800',
};

const CATEGORY_NAMES = {
  ml_monday: 'ML Monday',
  tech_tuesday: 'Tech Tuesday',
  web_wednesday: 'Web Wednesday',
  thought_thursday: 'Thought Thursday',
  fun_friday: 'Fun Friday',
};
---

<!DOCTYPE html>
<html lang="en">
	<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>AI News Blog - Weekly Tech & AI Digests</title>
  <meta name="description" content="Curated weekly digests of tech, AI, and web development news. Subscribe for free!">
  <link rel="alternate" type="application/rss+xml" title="AI News Blog RSS Feed" href="/rss.xml">
  <link rel="stylesheet" href="/src/styles/global.css">
	</head>
<body class="bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <header class="mb-12">
      <div class="flex justify-between items-center">
        <div>
          <h1 class="text-4xl font-bold text-gray-900 mb-2">AI News Blog</h1>
          <p class="text-xl text-gray-600">Curated weekly digests of tech, AI, and web development news</p>
          <p class="text-sm text-gray-500 mt-2">
            <a href="/how-it-works" class="text-blue-600 hover:text-blue-800">Learn how our AI curation works ‚Üí</a>
          </p>
        </div>
        <a href="/rss.xml" class="flex items-center gap-2 px-4 py-2 bg-orange-100 text-orange-700 rounded-lg hover:bg-orange-200 transition-colors" title="RSS Feed">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M6.503 20.752c0 1.794-1.456 3.248-3.251 3.248-1.796 0-3.252-1.454-3.252-3.248 0-1.794 1.456-3.248 3.252-3.248 1.795.001 3.251 1.454 3.251 3.248zm-6.503-12.572v4.811c6.05.062 10.96 4.966 11.022 11.009h4.817c-.062-8.71-7.118-15.758-15.839-15.82zm0-3.368c10.58.046 19.152 8.594 19.183 19.188h4.817c-.03-13.231-10.755-23.954-24-24v4.812z"/>
          </svg>
          <span class="text-sm font-medium">RSS</span>
        </a>
      </div>
    </header>

    <SubscribeForm />

    <!-- Category Filters -->
    <div class="mb-8">
      <div class="flex flex-wrap gap-2">
        <a href="/" class={`px-4 py-2 rounded-lg transition-colors ${!category || category === 'all' ? 'bg-blue-600 text-white' : 'bg-white text-gray-700 hover:bg-gray-100'}`}>
          All
        </a>
        <a href="/?category=ml_monday" class={`px-4 py-2 rounded-lg transition-colors ${category === 'ml_monday' ? 'bg-blue-600 text-white' : 'bg-white text-gray-700 hover:bg-gray-100'}`}>
          ML Monday
        </a>
        <a href="/?category=tech_tuesday" class={`px-4 py-2 rounded-lg transition-colors ${category === 'tech_tuesday' ? 'bg-blue-600 text-white' : 'bg-white text-gray-700 hover:bg-gray-100'}`}>
          Tech Tuesday
        </a>
        <a href="/?category=web_wednesday" class={`px-4 py-2 rounded-lg transition-colors ${category === 'web_wednesday' ? 'bg-blue-600 text-white' : 'bg-white text-gray-700 hover:bg-gray-100'}`}>
          Web Wednesday
        </a>
        <a href="/?category=thought_thursday" class={`px-4 py-2 rounded-lg transition-colors ${category === 'thought_thursday' ? 'bg-blue-600 text-white' : 'bg-white text-gray-700 hover:bg-gray-100'}`}>
          Thought Thursday
        </a>
        <a href="/?category=fun_friday" class={`px-4 py-2 rounded-lg transition-colors ${category === 'fun_friday' ? 'bg-blue-600 text-white' : 'bg-white text-gray-700 hover:bg-gray-100'}`}>
          Fun Friday
        </a>
      </div>
    </div>

    <!-- Search Bar -->
    <div class="mb-8">
      <form action="/" method="GET" class="flex gap-2">
        {category && <input type="hidden" name="category" value={category} />}
        <input
          type="text"
          name="search"
          value={search || ''}
          placeholder="Search digests..."
          class="flex-1 px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
        />
        <button type="submit" class="px-6 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors">
          Search
        </button>
        {search && (
          <a href={category ? `/?category=${category}` : '/'} class="px-6 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 transition-colors">
            Clear
          </a>
        )}
      </form>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {digests?.map((digest: Digest) => (
        <article class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow">
          <div class="p-6">
            <div class="flex items-center justify-between mb-3">
              <span class={`px-3 py-1 rounded-full text-sm font-medium ${CATEGORY_COLORS[digest.category]}`}>
                {CATEGORY_NAMES[digest.category]}
              </span>
              <time class="text-sm text-gray-500">
                {new Date(digest.published_date).toLocaleDateString()}
              </time>
            </div>
            
            <h2 class="text-xl font-semibold text-gray-900 mb-3">
              <a href={`/digest/${digest.id}`} class="hover:text-blue-600">
                {digest.title}
              </a>
            </h2>

            <div class="flex items-center gap-4 text-sm text-gray-600">
              <span>üëç {digest.thumbs_up || 0}</span>
              <span>üñï {digest.middle_finger || 0}</span>
              <span>üí¨ {digest.comment_count || 0}</span>
              <span>üëÅ {digest.view_count || 0}</span>
            </div>
          </div>
        </article>
      ))}
    </div>

    {!digests || digests.length === 0 && (
      <div class="text-center py-12 col-span-full">
        <p class="text-gray-600 text-lg">
          {search ? 'No results found. Try a different search term.' : 'No digests published yet. Check back soon!'}
        </p>
      </div>
    )}

    <!-- Pagination -->
    {totalPages > 1 && (
      <div class="col-span-full mt-8 flex justify-center gap-2">
        {page > 1 && (
          <a 
            href={`/?${new URLSearchParams({ ...(category && { category }), ...(search && { search }), page: String(page - 1) }).toString()}`}
            class="px-4 py-2 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors"
          >
            ‚Üê Previous
          </a>
        )}
        
        {Array.from({ length: totalPages }, (_, i) => i + 1).map(p => (
          <a
            href={`/?${new URLSearchParams({ ...(category && { category }), ...(search && { search }), page: String(p) }).toString()}`}
            class={`px-4 py-2 rounded-lg transition-colors ${p === page ? 'bg-blue-600 text-white' : 'bg-white border border-gray-300 hover:bg-gray-50'}`}
          >
            {p}
          </a>
        ))}
        
        {page < totalPages && (
          <a
            href={`/?${new URLSearchParams({ ...(category && { category }), ...(search && { search }), page: String(page + 1) }).toString()}`}
            class="px-4 py-2 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors"
          >
            Next ‚Üí
          </a>
        )}
      </div>
    )}
  </div>
	</body>
</html>
