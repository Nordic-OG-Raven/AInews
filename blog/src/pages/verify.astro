---
import { createAdminClient } from '../lib/supabase';

const token = Astro.url.searchParams.get('token');
let success = false;
let message = '';

if (token) {
  const supabase = createAdminClient();
  
  const { data: subscriber, error } = await supabase
    .from('subscribers')
    .select('*')
    .eq('verification_token', token)
    .single();

  if (subscriber && !subscriber.verified) {
    const { error: updateError } = await supabase
      .from('subscribers')
      .update({ verified: true })
      .eq('verification_token', token);
    
    if (!updateError) {
      success = true;
      message = 'Email verified! You will now receive weekly AI news digests.';
    } else {
      message = 'Verification failed. Please try again.';
    }
  } else if (subscriber?.verified) {
    success = true;
    message = 'This email is already verified!';
  } else {
    message = 'Invalid verification token.';
  }
} else {
  message = 'No verification token provided.';
}
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Email Verification - AI News Blog</title>
  <link rel="stylesheet" href="/src/styles/global.css">
</head>
<body class="bg-gray-50">
  <div class="min-h-screen flex items-center justify-center px-4">
    <div class={`max-w-md w-full bg-white rounded-lg shadow-md p-8 text-center ${success ? 'border-t-4 border-green-500' : 'border-t-4 border-red-500'}`}>
      <div class="mb-4">
        {success ? (
          <svg class="w-16 h-16 text-green-500 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        ) : (
          <svg class="w-16 h-16 text-red-500 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        )}
      </div>
      
      <h1 class={`text-2xl font-bold mb-4 ${success ? 'text-green-900' : 'text-red-900'}`}>
        {success ? 'Success!' : 'Verification Failed'}
      </h1>
      
      <p class="text-gray-700 mb-6">{message}</p>
      
      <a href="/" class="inline-block px-6 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors">
        Go to Homepage
      </a>
    </div>
  </div>
</body>
</html>

